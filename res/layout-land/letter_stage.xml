<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
				<!-- play/show buttons -->
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <Button 
			        android:id="@+id/play_tone_button"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/play"
			        android:drawableRight="@drawable/bullhorn"/>
            <Button 
			        android:id="@+id/show_letter_button"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/show"
			        android:drawableRight="@drawable/eye"/>
            <Button 
			        android:id="@+id/next_letter_button"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/next"
			        android:drawableRight="@drawable/squiggle"/>
    		</LinearLayout>
    		
        <!-- letter display -->
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
             <TextView  
                android:id="@+id/letter_textview "
								android:layout_width="fill_parent" 
							  android:layout_height="80dip" 
							  android:gravity="center"
							  android:textSize="70dip"
							  android:paddingTop="5dip"
							  android:text="S"
							/>
             
             <TextView  
                android:id="@+id/dit_dash_textview"
								android:layout_width="fill_parent" 
							  android:layout_height="70dip" 
							  android:gravity="center_horizontal"
							  android:textSize="70dip"
							  android:text="..."
							/>
            
        </LinearLayout>
</LinearLayout>

